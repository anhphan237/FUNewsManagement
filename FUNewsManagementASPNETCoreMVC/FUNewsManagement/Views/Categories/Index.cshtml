@model IEnumerable<BusinessObjects.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    @if (Context.Session.GetInt32("AccountRole") == 1)
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDesciption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDesciption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategory.CategoryDesciption)
            </td>
            @* <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td> *@
            <td>
                @if (Context.Session.GetInt32("AccountRole") == 1)
                {
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                }
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
